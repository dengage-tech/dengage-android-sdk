<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/base_component_height"
    android:orientation="horizontal"
    android:paddingTop="2dp"
    android:paddingBottom="2dp">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etEventKey"
        android:layout_width="0dp"
        android:layout_height="@dimen/base_component_height"
        android:layout_weight="0.45"
        android:gravity="center_horizontal"
        android:hint="@string/event_key"
        android:textSize="@dimen/dengage_text_size_medium" />

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/base_component_height"
        android:layout_weight="0.1" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etEventValue"
        android:layout_width="0dp"
        android:layout_height="@dimen/base_component_height"
        android:layout_weight="0.45"
        android:gravity="center_horizontal"
        android:hint="@string/event_value"
        android:textSize="@dimen/dengage_text_size_medium" />

</LinearLayout>